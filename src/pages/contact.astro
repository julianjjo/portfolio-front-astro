---
import Layout from "@layouts/Layout.astro";
import FormContact from "@components/FormContact.astro";
---

<Layout
  title="Contact"
  description="Get in touch with me for collaboration or opportunities in Backend and Full Stack development."
>
  <div class="flex-grow flex items-center justify-center pt-32 pb-20 px-4">
    <FormContact />
  </div>
</Layout>

<style>
  .playfair-display {
    font-family: "Playfair Display", serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
  }
</style>

<script>
  let responseMessage: string;

  async function submit(e: SubmitEvent) {
    e.preventDefault();
    const formData = new FormData(e.currentTarget as HTMLFormElement);
    const response = await fetch("/api/feedback", {
      method: "POST",
      body: formData,
    });
    const data = await response.json();
    responseMessage = data.message;
  }
</script>
